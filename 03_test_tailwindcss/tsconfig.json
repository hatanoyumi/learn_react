{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": false,
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "types": [
      "vite/client",
      "vite-plugin-svgr/client"
    ],
    "paths": {
      "@src/*": [
        "src/*"
      ],
      "@styles/*": [
        "src/styles/*"
      ],
      "@components/*": [
        "src/components/*"
      ],
      "@pages/*": [
        "src/pages/*"
      ],
      "@common/*": [
        "src/common/*"
      ],
      "@utils/*": [
        "src/utils/*"
      ],
      "@icons/*": [
        "src/common/icons/*"
      ]
    },
    "incremental": true
  },
  "include": [
    "src",
    "src/**/*.ts",
    "src/**/*.tsx",
    ".eslintrc.js",
    "tailwind.config.ts",
    "vite.config.ts",
    "postcss.config.js",
    "types"
  ],
  "exclude": [
    "node_modules",
    ".vscode"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
